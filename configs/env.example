# ------------------------
# Development environment
# ------------------------
APP_NAME=quiz-platform
APP_ENV=development
HTTP_ADDR=0.0.0.0:8080
GRACEFUL_SHUTDOWN_SECONDS=20

# Postgres (local dev uses docker-compose service)
PG_HOST=localhost
PG_PORT=5432
PG_USER=quiz
PG_PASSWORD=quizpass
PG_DATABASE=quiz_dev
PG_SSL_MODE=disable

# Redis (local dev docker-compose service)
REDIS_ADDR=localhost:6379
REDIS_DB=0
REDIS_POOL_SIZE=20

# Security & signing
JWT_SECRET=replace-me-development-secret
QUESTION_HMAC_SECRET=replace-me-question-secret

# Auth (email + Google OAuth)
AUTH_EMAIL_FROM=quizbot@example.dev
AUTH_SMTP_HOST=smtp.gmail.com
AUTH_SMTP_PORT=587
AUTH_SMTP_USERNAME=dev-gmail@example.dev
AUTH_SMTP_PASSWORD=dev-app-password
GOOGLE_OAUTH_CLIENT_ID=dev-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=dev-client-secret
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:8080/v1/oauth/google/callback

# Observability
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Match & Question defaults
QUESTION_FETCH_TIMEOUT_SECONDS=4
DEFAULT_QUESTION_COUNT=5
DEFAULT_PER_QUESTION_SECONDS=15
GLOBAL_TIMEOUT_PADDING_SECONDS=20
LEADERBOARD_SNAPSHOT_INTERVAL=5m
LEADERBOARD_SNAPSHOT_TOP=50
AI_GENERATOR_URL=http://localhost:9090
AI_GENERATOR_API_KEY=dev-ai-key
AI_HTTP_TIMEOUT=6s


# ------------------------
# Production environment
# (override in deployment)
# ------------------------
PROD_HTTP_ADDR=:8080
PROD_PG_HOST=prod-db-host
PROD_PG_PORT=5432
PROD_PG_USER=quiz_prod
PROD_PG_PASSWORD=prod-strong-pass
PROD_PG_DATABASE=quiz_prod
PROD_PG_SSL_MODE=require

PROD_REDIS_ADDR=prod-redis:6379
PROD_REDIS_DB=0
PROD_REDIS_POOL_SIZE=200

PROD_JWT_SECRET=replace-with-prod-secret
PROD_QUESTION_HMAC_SECRET=replace-with-prod-hmac

PROD_AUTH_EMAIL_FROM=notifications@quizapp.com
PROD_SMTP_HOST=smtp.gmail.com
PROD_SMTP_PORT=587
PROD_SMTP_USERNAME=prod-gmail@quizapp.com
PROD_SMTP_PASSWORD=prod-app-password
PROD_GOOGLE_OAUTH_CLIENT_ID=prod-client-id.apps.googleusercontent.com
PROD_GOOGLE_OAUTH_CLIENT_SECRET=prod-client-secret
PROD_GOOGLE_OAUTH_REDIRECT_URL=https://api.quizapp.com/v1/oauth/google/callback

PROD_PROMETHEUS_ENABLED=true
PROD_SENTRY_DSN=https://public@sentry.io/123

PROD_QUESTION_FETCH_TIMEOUT_SECONDS=4
PROD_DEFAULT_QUESTION_COUNT=5
PROD_DEFAULT_PER_QUESTION_SECONDS=15
PROD_GLOBAL_TIMEOUT_PADDING_SECONDS=20
PROD_LEADERBOARD_SNAPSHOT_INTERVAL=5m
PROD_LEADERBOARD_SNAPSHOT_TOP=50
PROD_AI_GENERATOR_URL=https://ai.quizapp.com
PROD_AI_GENERATOR_API_KEY=prod-ai-key
PROD_AI_HTTP_TIMEOUT=6s

